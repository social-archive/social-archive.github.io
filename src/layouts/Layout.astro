---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const { title = '소셜 아카이브', description = '소셜 미디어 포스트를 모아두는 공간', image } = Astro.props;

const siteUrl = 'https://social-archive.github.io';
const pageUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = image ? `${siteUrl}${image}` : `${siteUrl}/logo.png`;
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="stylesheet" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="소셜아카이브" />
		<link rel="canonical" href={Astro.url.href} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={pageUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content="ko_KR" />
		<meta property="og:site_name" content="소셜 아카이브" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
	</head>
	<body class="min-h-screen bg-white text-neutral-900 antialiased">
		<div class="max-w-7xl mx-auto px-6 md:px-10">
			<slot />
		</div>
	</body>
</html>
