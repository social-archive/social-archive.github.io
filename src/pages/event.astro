---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="이벤트 - 소셜 아카이브" description="소셜 아카이브 이벤트">
	<Header />

	<main class="py-16">
		<div class="mb-12">
			<h1 class="text-4xl font-bold text-neutral-900 mb-3">이벤트</h1>
			<p class="text-xl text-neutral-600">소셜 아카이브 이벤트입니다.</p>
		</div>
		<div class="p-8 border border-neutral-200 bg-neutral-50 text-neutral-600 text-lg">
			준비 중입니다.
		</div>
	</main>

	<Footer />
</Layout>
