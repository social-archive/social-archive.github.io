---
const links = [
	{ href: '/blog', label: '이벤트 / 소식', external: false },
	{ href: 'https://cafe.naver.com/sarc100', label: '커뮤니티', external: true },
	{ href: 'https://www.latpeed.com/stores/oVjgN', label: '자료실', external: true },
];
---

<header class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6 py-8 border-b border-neutral-200">
	<a href="/" class="text-2xl font-extrabold tracking-tight text-neutral-900 hover:text-neutral-600 transition-colors no-underline">
		<span class="text-blue-600">소셜</span><span>아카이브</span>
	</a>
	<nav class="flex flex-wrap items-center gap-4">
		{links.map((link) => (
			<a
				href={link.href}
				class="rounded inline-block px-6 py-3 text-base font-semibold bg-blue-700 text-white hover:bg-neutral-800 transition-colors no-underline"
				target={link.external ? '_blank' : undefined}
				rel={link.external ? 'noopener noreferrer' : undefined}
			>
				{link.label}
			</a>
		))}
	</nav>
</header>
